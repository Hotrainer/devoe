{{ 'section-custom.css' | asset_url | stylesheet_tag }}

<div class="d-grid-row d-grid-2">
  <div class="d-column">
    <div class="d-product-item-no-text">
      <img src="{{section.settings.product.featured_image}}">
    </div>
  </div>
  <div class="d-column">
    <div class="d-grid-row d-grid-2">
      <div class="d-column">
    <div class="d-product-item-top-text">
        </div>
      </div>
      <div class="d-column">
    <div class="d-product-item-bottom-text">
        </div>
      </div>
    </div>
  </div>
</div>
  


